<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:elevation="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="+INVITE"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/merchantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="60dp"
                android:layout_marginTop="30dp"
                android:text="Sahil Kirloskar"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/merchantlocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/merchantName"
                android:layout_alignParentStart="true"
                android:layout_marginStart="60dp"
                android:text="Mumbai, within 600- 700m"
                android:textColor="#4F697A"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/merchantProgressBar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/merchantlocation"
                android:layout_alignParentStart="true"
                android:layout_marginStart="60dp"
                android:layout_marginTop="5dp"
                android:progress="60"
                android:progressDrawable="@drawable/custom_fragm_progress" />
            <LinearLayout
                android:id="@+id/contLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentStart="true"
                android:layout_marginStart="75dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/merchantProgressBar">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circler_buttons"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/ic_call"
                    android:padding="7dp"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circler_buttons"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/ic_person_plus"
                    android:padding="7dp"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circler_buttons"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/ic_location_maps"
                    android:padding="7dp"/>



            </LinearLayout>

            <TextView
                android:id="@+id/merchantdesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/contLL"
                android:layout_alignParentStart="true"
                android:layout_marginStart="2dp"
                android:layout_marginTop="3dp"
                android:text="Hi community! We have a great deals for you check this out! "
                android:textColor="#4F697A"
                android:textSize="13sp"
                android:textStyle="bold" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_alignStart="@+id/card2"
        android:layout_alignTop="@+id/card2"
        android:layout_marginStart="-30dp"
        android:layout_marginTop="30dp"
        android:elevation="5dp"
        app:cardBackgroundColor="#A8BECC"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp">

        <TextView
            android:id="@+id/merchantshortname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="SK"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>